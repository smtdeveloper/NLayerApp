@{
    ViewData["Title"] = "Index";
}

@model List<ProductWithCategoryDto>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Category</th>
            <th scope="col">CreatedDate</th>
            <th scope="col">Actions</th>
            <th scope="col"></th>   

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"> @item.Id </th>
                <th scope="row"> @item.Name </th>
                <th scope="row"> @item.Price </th>
                <th scope="row"> @item.Stock </th>
                <th scope="row"> @item.Category.Name </th>
                <th scope="row"> @item.CreatedDate.ToShortDateString() </th>
                <th> <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a></th>
                <td>  <button class="btn btn-outline-danger" onclick="deleteBlog(@item.Id)">Sil</button> </td>
            </tr>
        }
    </tbody>
</table>

<br/>

@*<a href="Product/Save" class="btn btn-success" > Yeni ürün ekle </a>*@

<a class="btn btn-success" asp-controller="Product" asp-action="Save" > Yeni ürün ekle</a>


<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function deleteBlog(id) {
        Swal.fire({
            title: 'Emin misiniz !',
            text: "Are you sure you want to delete?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'yes, Delete',
            cancelButtonText: "No",
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "post",
                    url: "/Product/Remove/" + id,
                    success: function (func) {
                        Swal.fire(
                            'Deleted ! ',
                            'Successfully deleted',
                            'success'
                        )
                        setTimeout('', 3000);
                        location.reload();
                    }
                }
                )
            }
        })
    }
</script>